extends layouts/main
block content
    .form-container
        form(action=routes.postUpload,method="post")
            label(for="video") Video File
            input(type="file", id="video", name="video",required=true)
            input(type="text",placeholder="Title",name="title",required=true)
            textarea(name="description",placeholder="Description",required=true)
            input(type="submit",value="Upload Video")